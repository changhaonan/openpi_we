        {
            "name": "Inference example",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/inference_example.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Test convert",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/world_engine/convert_mcap_data_to_lerobot.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Test train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train.py",
            "args": [
                "pi0_fast_libero",
                "--exp-name=my_experiment",
                "--overwrite"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Test infer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/serve_policy.py",
            "args": [
                "--env",
                "ALOHA_SIM",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
    ]
